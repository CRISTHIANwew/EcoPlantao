unit Login;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs, FMX.Objects,
  FMX.StdCtrls, FMX.Controls.Presentation, FMX.Edit;

type
  TfrmLogin = class(TForm)
    Rectangle1: TRectangle;
    Text: TText;
    Edt_user: TEdit;
    Label1: TLabel;
    edt_pass: TEdit;
    Label2: TLabel;
    RoundRect1: TRoundRect;
    btn_entrar: TButton;
    Label5: TLabel;
    CheckBox2: TCheckBox;
    CheckBox1: TCheckBox;
    procedure btn_entrarClick(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private

  public
    User: string;
    CorrectUser: string;
    password: string;
    Correctpassword: string;
  end;

var
  frmLogin: TfrmLogin;

implementation

{$R *.fmx}

uses DataModule, Principal;
{$R *.NmXhdpiPh.fmx ANDROID}

procedure TfrmLogin.btn_entrarClick(Sender: TObject);
begin
DM.User := Edt_user.Text;
DM.password := edt_pass.Text;
  if dm.User = dm.CorrectUser then
  begin
    if dm.password = dm.Correctpassword then
      begin
      ShowMessage('Usuário e senha corretos!');
      var
      frmPrincipal: TfrmPrincipal;
      frmPrincipal:= TfrmPrincipal.Create(self);
      frmPrincipal.Show;
      end;
  end;
end;

procedure TfrmLogin.FormCreate(Sender: TObject);
begin
  CorrectUser:='SUPERVISOR';
  Correctpassword:='eco123456';
end;

end.
